# Claude API Configuration
# Option 1: Direct Anthropic API
ANTHROPIC_API_KEY=sk-ant-your_api_key_here

# Option 2: TrueFoundry Proxy (uncomment these lines)
# ANTHROPIC_BASE_URL=https://truefoundry.staging.sunbit.in/api/llm
# ANTHROPIC_API_KEY=dummy
# ANTHROPIC_CUSTOM_HEADERS=Authorization: Bearer YOUR_JWT_TOKEN_HERE
# X-TFY-LOGGING-CONFIG: {"enabled": true}
# ANTHROPIC_MODEL=aws-bedrock/us-anthropic-claude-sonnet-4-5-20250929-v1-0
# ANTHROPIC_DEFAULT_OPUS_MODEL=aws-bedrock/anthropic.claude-opus-4-5
# ANTHROPIC_DEFAULT_SONNET_MODEL=aws-bedrock/us-anthropic-claude-sonnet-4-5-20250929-v1-0
# ANTHROPIC_DEFAULT_HAIKU_MODEL=aws-bedrock/us-anthropic-claude-haiku-4-5-20251001-v1-0
# CLAUDE_CODE_DISABLE_EXPERIMENTAL_BETAS=1

# DataDog API Configuration
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
DATADOG_SITE=datadoghq.com

# GitHub Configuration (if using API instead of MCP)
GITHUB_TOKEN=your_github_token_here

# Application Configuration
LOG_LEVEL=INFO
TIMEZONE=Asia/Tel_Aviv

# Claude Agent SDK Configuration
# Model selection for each agent (optional - defaults shown)
LEAD_AGENT_MODEL=opus
DATADOG_INVESTIGATOR_MODEL=haiku
DEPLOYMENT_ANALYZER_MODEL=haiku
CODE_REVIEWER_MODEL=sonnet

# Permission mode for SDK tool execution
# Options: default, acceptEdits, bypassPermissions, plan
PERMISSION_MODE=default

# Session log directory (optional - defaults to logs/)
SESSION_LOG_DIR=logs
